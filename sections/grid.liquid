      <div class="grid-item">
        <img
          src="{{ image | asset_url }}"
          alt="Grid Image {{ forloop.index }}"
          width="300"
          height="300">
        {% comment %} Adding small quick view icon containg link to pop-up {% endcomment %}
        <!-- Quick View Icon -->
        <div class="quick-view-icon">
          <svg
            width="30"
            height="30"
            viewBox="0 0 30 30"
            fill="none"
