{% schema %}
    {
      "name": "Custom Grid",
      "settings": [],
      "presets": [
        {
          "name": "Custom Grid",
          "category": "Custom"
        }
      ],
      "blocks": [
        {
          "type": "product",
          "name": "Product",
          "settings": [
            {
              "type": "product",
              "id": "product",
              "label": "Select Product"
            }
          ]
        }
      ],
      
    }
    {% endschema %}
    
    <div class="custom-grid">
      {% for block in section.blocks %}
        <div class="grid-item">
          <h2>{{ block.settings.product.title }}</h2>
          <img style="height: auto width:auto;" src="{{ block.settings.product.featured_image | img_url: 'medium' }}" alt="{{ block.settings.product.title }}">
          <p>{{ block.settings.product.price | money }}</p>
          <a href="{{ block.settings.product.url }}" class="btn">View Product</a>
        </div>
      {% endfor %}
    </div>
    
    <style>
    .custom-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }
    
    .grid-item {
      text-align: center;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }
    
    .grid-item img {
      max-width: 100%;
    }
    </style>